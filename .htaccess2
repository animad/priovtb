RewriteEngine on
RewriteBase /
Options +FollowSymLinks
Options -Indexes

# активный скин сайта
RewriteRule ^(.*)$ - [E=skin:skin2]
# меняем активный скин если сайт открывает в АНГЛИЙСКОМ языке
RewriteCond %{QUERY_STRING} lang=eng
RewriteRule ^(.*)$ - [E=skin:skin2_eng]

#страница по умолчанию
#RewriteRule ^$ /main.html [L,R]

# имя запрошенного файла
RewriteRule ([^/]*)$ - [E=fname:$1]

